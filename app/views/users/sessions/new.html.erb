<h1 class="text-center mt-4"> Log in </h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "shadow bg-dark rounded") do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label text-dark" %>
      <div class="col-10">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow rounded' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-2 col-form-label text-dark"  %>
      <div class="col-10">
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control shadow rounded' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' do %>
          <%= resource.class.human_attribute_name('remember_me') %>
        <% end %>
      </div>
    <% end %>

    <div class="form-group row justify-content-center">
      <%= f.submit "Log in", class:"btn btn-outline-dark btn-lg" %>
    </div>


  <div class="form-group row">
  <%= link_to '[ Cancel and return to articles listing ]', articles_path, class:"text-dark" %>
  </div>

<div class="form-group row">
<%= render 'devise/shared/links' %>
</div>
<% end %>
</div>
</div>
</div>
