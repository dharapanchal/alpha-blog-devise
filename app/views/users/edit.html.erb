<h1 class="text-center mt-4"> Update User details </h1>
<div class="container">
  <%= render  'shared/errors', obj: @user %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user,class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-3 col-form-label text-light" %> <br/>
        <div class="col-9">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-3 col-form-label text-light" %> <br/>
        <div class="col-9">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-3 col-form-label text-light" %> <br/>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-3 col-form-label text-light" %><br />
        <div class="col-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :current_password, class: "col-3 col-form-label text-light" %>
        <div class="col-9">
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control shadow rounded" %>
        <i>(we need your current password to confirm your changes)</i><br />
        </div>

      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Update account", class:"btn btn-outline-light btn-lg" %>
      </div>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class:"text-dark" %>
    <% end %>
  </div>
</div>
